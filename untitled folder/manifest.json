{
  "manifest_version": 3,
  "name": "Safe Browsing Firewall",
  "version": "1.0",
  "description": "A Chrome extension to block unsafe websites and ensure safe browsing.",
  "permissions": ["webRequest", "webRequestBlocking", "declarativeNetRequest", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}